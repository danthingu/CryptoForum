<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Crypto Forum</h1>
            <p>Here we can freely discuss our views about crypto</p>
            <p> 
                <a class="btn btn-primary btn-lg" href="/cryptocurrency/new">Add New Crypto For Discussion</a>
            </p>
        </div>
    </header>
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% cryptocurrencies.forEach(function(cryptocurrency){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= cryptocurrency.image %>">
                   <div class="caption">
                       <h4><%= cryptocurrency.name %></h4>
                   </div>
                   <p>
                       <a href="/cryptocurrency/<%= cryptocurrency._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
 
    
</div>

<% include ../partials/footer %>
